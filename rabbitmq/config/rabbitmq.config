[{rabbit,        [
          {auth_backends, [rabbit_auth_backend_cache]},
                  {ssl_options, [{cacertfile, "/keys/ca_certificate.pem"},
                                 {certfile,   "/keys/server_certificate.pem"},
                                 {keyfile,    "/keys/server_key.pem"},
                                 {verify,     verify_none},
                                 {fail_if_no_peer_cert, false}]}
                 ]},
 {rabbitmq_auth_backend_cache, [
                                {cached_backend, rabbit_auth_backend_http},
                  {cache_ttl, 180000}
                               ]
  },
  {rabbitmq_auth_backend_http, [{http_method,   post},
                                {user_path,            "http://platform:8084/api/auth/user"},
                                {vhost_path,           "http://platform:8084/api/auth/vhost"},
                                {resource_path,        "http://platform:8084/api/auth/resource"},
                                {topic_path,           "http://platform:8084/api/auth/topic"}
                               ]
  },
 {rabbitmq_mqtt, [
                  {ssl_listeners,    [8883]},
                  {tcp_listeners,    [1883]}
                  ]}
].